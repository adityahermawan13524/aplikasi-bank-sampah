<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".View.history.detail_input_sampah_user">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Detail Transaksi "
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="24dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/transaksibrhsl"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/framelistdetail"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input Sampah"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Status Transaksi "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"
                    />

                <TextView
                    android:id="@+id/d_stts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berhasil!"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:text="Nama "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aditya"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Kategori Sampah "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plastik"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Berat Sampah "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_berat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Kg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Sampah perKg "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_hargaperkg"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Rp. 10000 per/Kg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Pajak  "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_pajak"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Rp. 800"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Total Harga_sampah "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_jmlhargasmph"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Rp. "
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_Tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="01/01/2025"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="80dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Saldo "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_jumlah"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. 10000"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/kembali"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="Kembali Ke Home "
            android:layout_gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>