<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".admin.View.transaksi.konfirmasi_jemput_sampah">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Transaksi "
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="65dp"
            android:layout_marginStart="24dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/transaksibrhsl"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/framelistdetail"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Input Sampah"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:layout_marginStart="55dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Status Transaksi "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_stts"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Berhasil!"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Nama "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_nama"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Aditya"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Kategori Sampah "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_kategori"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Plastik"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Berat Sampah "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_berat"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="1 Kg"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Harga Sampah perKg "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_hargaperkg"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. 10000 per/Kg"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Pajak  "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_pajak"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. 800"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Tanggal "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_Tanggal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="01/01/2025"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Total Harga_sampah "
                    android:textColor="@color/textlist"
                    android:textSize="16sp"
                    android:layout_marginStart="50dp"/>

                <TextView
                    android:id="@+id/d_jmlhargasmph"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. "
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:text="Saldo "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="50dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/d_jumlah"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <Button
            android:id="@+id/kembali"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:text="Kembali Ke Home "
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>